<div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-md">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @client %>

  <div class="mt-5 flex justify-between items-center">
    <div>
      <%= link_to "Edit", edit_client_path(@client), class: "py-2 px-4 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg" %>
      <%= link_to "Back", clients_path, class: "py-2 px-4 text-gray-700 font-medium" %>
    </div>
    <%= button_to "Destroy", @client, method: :delete, class: "py-2 px-4 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg", form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>
</div>
